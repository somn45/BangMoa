extends templates/layout
include mixins/interest-cafe
include mixins/cafe

block content
  section.home__container
    h2.home__title.home__title--top 내가 좋아하는 
    h2.home__title.home__title--bottom 방탈출 카페를 등록해 보세요
    a(href='/cafes/register').home__register 방탈출 카페 등록하기
    div.home__hr
    h2.home__subtitle.home__subtitle--top 좋아하는 테마를 등록하면
    h2.home__subtitle.home__subtitle-middum 내가 좋아하는 테마의 방탈출 카페를
    h2.home__subtitle.home__subtitle--bottom 쉽게 찾을 수 있습니다.
    button.home__modal-btn 테마 찾기
    include templates/theme-modal
    div.home__hr
    ul.home__cafes
      if(loggedUser)
        each cafes in interestedCafes
          +cafes(cafes)
        else
          h5 원하시는 테마의 방탈출 카페가 존재하지 않습니다.
      else
        each cafe in cafes
          +cafe(cafe)
        else
          h5 방탈출 카페가 존재하지 않습니다.

block script
  script(src='/dist/js/addTheme.js')